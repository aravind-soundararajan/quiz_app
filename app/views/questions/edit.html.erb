<h1>Edit Question</h1>
<%= form_for(@ques, :method=>'PUT') do |f| %>

<%= render 'shared/other_errors', :object => f.object%>
<form class="navbar-form">
<div class="control-group">

<%= f.label :content %><br />
<%=text_field_tag 'content', @ques.content, :size => 75%>
</div>
<div class="field">
<%= f.label :hint %><br />

<%=text_field_tag 'hint', @ques.hint, :size => 75%>
</div>
<div class="field">
<%= f.label :option1 %><br />

<%=text_field_tag 'option1', @ques.option1, :size => 75%>
</div>
<div class="field">
<%= f.label :option2 %><br />
<%=text_field_tag 'option2', @ques.option2, :size => 75%>
</div>
<div class="field">
<%= f.label :option3 %><br />

<%=text_field_tag 'option3', @ques.option3, :size => 75%>
</div>
<div class="field">
<%= f.label :option4 %><br />

<%=text_field_tag 'option4', @ques.option4, :size => 75%>
</div>
<div class="field">
<%= f.label :answer %><br />

<%=text_field_tag 'answer', @ques.answer, :size => 75%>
</div>
<div >
<%= f.submit "Update" ,:class => 'btn btn-primary',:style=>'margin-bottom:45px;'%>
</div>
</form>
<% end %>