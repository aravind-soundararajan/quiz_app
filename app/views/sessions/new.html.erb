<h1 class="legend">Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
<div class="field">
<%= f.label :email %><br />
<%= f.text_field :email %>
</div>
<div class="field">
<%= f.label :password %><br />
<%= f.password_field :password %>
</div>
<div class="actions">
<%= f.submit "Sign in",:class => 'btn btn-primary',:style=>'margin-bottom:45px;' %>
</div>
<% end %>
<div class="clearfix"><p>New user? <%= link_to "Sign up now!", signup_path %></p></div>
